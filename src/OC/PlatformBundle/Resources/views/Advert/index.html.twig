{% extends "OCPlatformBundle::layout.html.twig" %}

{% block title %}
  {{ parent() }} - Accueil
{% endblock %}

{% block oc_platform_body %}

  {% include "OCPlatformBundle:Advert:flashbag.html.twig" %}

  <ul>
    {% for advert in listAdverts %}
      <li>
        <a href="{{ path('oc_platform_view', {'id': advert.id}) }}">
          {{ advert.title }}
        </a>
        par {{ advert.author }},
        le {{ advert.date|date('d/m/Y') }}
      </li>
    {% else %}
      <li>Pas d'annonces sacrebleu !</li>
    {% endfor %}
  </ul>
  <ul class="pagination">
    {% for numPage in range(1,nbPages) %}
      <li {% if numPage == page %}class="active"{% endif %}>
        <a href="{{ path('oc_platform_home', {'page': numPage}) }}">
          {{ numPage }}
        </a>
      </li>
    {% endfor %}
  </ul>
{% endblock %}